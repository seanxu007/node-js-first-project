extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product_title #{product.title}
                        .card__image
                            img(src="https://www.thewritingbook.com/wp-content/uploads/2015/07/thewritingbook-cover-padded.jpg", alt="Book Image")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A interesting book of writing books
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products